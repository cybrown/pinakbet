{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "preserve",
    "outDir": "./dist/",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "typings/globals",
    "typings/index.d.ts",
    "tests"
  ],
  "compileOnSave": false
}